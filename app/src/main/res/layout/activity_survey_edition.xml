<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".survey_controller.SurveyEditionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="end"
            android:orientation="horizontal">
            <Button
                android:id="@+id/edit_cancel"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:background="@drawable/close_cancel_24"
                android:tooltipText="@string/cancel"
                />
            <Button
                android:id="@+id/edit_save"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_check_24"
                android:tooltipText="@string/save"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_survey_name" />

        <EditText
            android:id="@+id/edit_survey_name"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:gravity="end"
            android:importantForAutofill="no"
            android:inputType="text"
            android:text="@string/edit_survey_name" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_survey_description"
             />

        <EditText
            android:text="@string/edit_survey_description"
            android:id="@+id/edit_survey_description"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:gravity="end"


            android:inputType="textMultiLine"
            android:importantForAutofill="no" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>